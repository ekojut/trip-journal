<script type="text/javascript">
	$('#listtable').ready(function(){
        var id = $(this).data('id');
        var name = $(this).data('name');
        var start = $(this).data('start');
        var destination = $(this).data('destination');
        var trip_code = $(this).data('trip_code');
        $('#listtable').table('show');
        $('.name').val(name);
